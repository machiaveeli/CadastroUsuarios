<Window x:Class="SistemaCadastroAlunos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaCadastroAlunos"
        mc:Ignorable="d"
        Title="Cadastro de Usuários" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Login:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtLogin" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <Label Content="Senha:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <PasswordBox x:Name="txtSenha" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Content="Nome Completo:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtNome" Grid.Row="2" Grid.Column="1" Margin="5"/>

                <Label Content="Data de Nasc.:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="dpDataNascimento" Grid.Row="3" Grid.Column="1" Margin="5"/>

                <Label Content="CPF:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtCpf" Grid.Row="4" Grid.Column="1" Margin="5"/>

                <Label Content="Permissões:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <CheckBox x:Name="chkAdmin" Content="É Administrador" Grid.Row="5" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                <Button x:Name="btnAdicionar" Content="Adicionar Usuário" Grid.Row="6" Grid.Column="1" Margin="5" Width="150" HorizontalAlignment="Left" Click="BtnAdicionar_Click"/>

            </Grid>
        </Border>

        <DataGrid x:Name="dgUsuarios" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="*"/>
                <DataGridTextColumn Header="Data Nasc." Binding="{Binding DataNascimento, StringFormat='d'}" Width="*"/>
                <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsAdmin}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>