<Window x:Class="SistemaCadastroAlunos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaCadastroAlunos"
        mc:Ignorable="d"
        Title="Cadastro de Usuários" 
        Height="650" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BaseInputStyle" TargetType="Control">
            <Setter Property="Margin" Value="0,4,0,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource BaseInputStyle}"/>
        <Style TargetType="DatePicker" BasedOn="{StaticResource BaseInputStyle}"/>

        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="15" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Dados do Usuário" 
                           Grid.Row="0" Grid.ColumnSpan="2" 
                           FontSize="18" FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Label Content="Login:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtLogin" Grid.Row="1" Grid.Column="1"/>

                <Label Content="Senha:" Grid.Row="2" Grid.Column="0"/>
                <PasswordBox x:Name="txtSenha" Grid.Row="2" Grid.Column="1"/>

                <Label Content="Nome Completo:" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="txtNome" Grid.Row="3" Grid.Column="1"/>

                <Label Content="Data de Nasc.:" Grid.Row="4" Grid.Column="0"/>
                <DatePicker x:Name="dpDataNascimento" Grid.Row="4" Grid.Column="1"/>

                <Label Content="CPF:" Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="txtCpf" Grid.Row="5" Grid.Column="1"/>

                <Label Content="Permissões:" Grid.Row="6" Grid.Column="0"/>
                <CheckBox x:Name="chkAdmin" Content="É Administrador" Grid.Row="6" Grid.Column="1" 
                          VerticalAlignment="Center" FontSize="14"/>

                <StackPanel Grid.Row="7" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0">

                    <Button x:Name="btnLimpar" Content="Limpar Campos" Click="BtnLimpar_Click"/>
                    <Button x:Name="btnAdicionar" Content="Adicionar Usuário" Click="BtnAdicionar_Click" FontWeight="Bold"/>

                </StackPanel>
            </Grid>
        </Border>

        <DataGrid x:Name="dgUsuarios" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="0,15,0,0"
                  FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="*"/>
                <DataGridTextColumn Header="Data Nasc." Binding="{Binding DataNascimento, StringFormat='d'}" Width="*"/>
                <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsAdmin}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>