<Window x:Class="SistemaCadastroUsuarios.TelaDeCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaCadastroUsuarios"
        mc:Ignorable="d"
        Title="Gestão de Usuários" 
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BaseInputStyle" TargetType="Control">
            <Setter Property="Margin" Value="0,4,0,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource BaseInputStyle}"/>
        <Style TargetType="DatePicker" BasedOn="{StaticResource BaseInputStyle}"/>

        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#FFD0D0D0" BorderThickness="1" Padding="15" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Dados do Usuário" 
                           Grid.Row="0" Grid.ColumnSpan="2" 
                           FontSize="18" FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Label Content="Email:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1"/>

                <Label Content="Senha:" Grid.Row="2" Grid.Column="0"/>
                <PasswordBox x:Name="txtSenha" Grid.Row="2" Grid.Column="1"/>

                <Label Content="Nome Completo:" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="txtNome" Grid.Row="3" Grid.Column="1"/>

                <Label Content="Data de Nasc.:" Grid.Row="4" Grid.Column="0"/>
                <DatePicker x:Name="dpDataNascimento" Grid.Row="4" Grid.Column="1"/>

                <Label Content="CPF:" Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="txtCpf" Grid.Row="5" Grid.Column="1" 
                         TextChanged="TxtCpf_TextChanged"  MaxLength="14"/>

                <Label Content="Permissões:" Grid.Row="6" Grid.Column="0"/>
                <CheckBox x:Name="chkAdmin" Content="É Administrador" Grid.Row="6" Grid.Column="1" 
                          VerticalAlignment="Center" FontSize="14"/>

                <StackPanel Grid.Row="7" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0">

                    <!-- 
                      BOTÃO DE SAIR ADICIONADO AQUI 
                      Ele precisa do método BtnSair_Click no arquivo .cs
                    -->
                    <Button x:Name="BtnSair" 
                            Content="Sair" 
                            Click="BtnSair_Click" 
                            Background="#FFD9534F" 
                            Foreground="White" 
                            BorderBrush="#FFD43F3A"
                            Margin="0,0,0,0"/>
                    <!-- Fim do botão adicionado -->

                    <Button x:Name="btnLimpar" Content="Limpar / Novo" Click="BtnLimpar_Click"/>

                    <Button x:Name="btnExcluir" Content="Excluir" Click="BtnExcluir_Click" 
                            Background="#FFFBF0F0" BorderBrush="#FFDC3C3C" IsEnabled="False"/>

                    <Button x:Name="btnAdicionar" Content="Adicionar Usuário" Click="BtnAdicionar_Click" FontWeight="Bold"/>

                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0">
            <Label Content="Pesquisar por Nome/CPF:" VerticalAlignment="Center" Padding="0,5" Margin="0,0,5,0"/>

            <TextBox x:Name="txtPesquisar" Width="300" 
             FontSize="14" Padding="5" VerticalAlignment="Center"/>

            <Button x:Name="btnPesquisar" 
            Content="Buscar" 
            Click="BtnPesquisar_Click" 
            VerticalAlignment="Center"
            Margin="5,0,0,0" 
            MinWidth="80"/>
        </StackPanel>

        <DataGrid x:Name="dgUsuarios" 
                  Grid.Row="2" AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="0,15,0,0"
                  FontSize="14"
                  
                  SelectionMode="Single" 
                  SelectionChanged="DgUsuarios_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding Cpf}" Width="*"/>
                <DataGridTextColumn Header="Idade" Binding="{Binding Idade}" Width="*"/>
                <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsAdmin, Mode=OneWay}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>