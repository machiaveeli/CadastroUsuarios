<Window x:Class="SistemaCadastroUsuarios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaCadastroUsuarios"
        mc:Ignorable="d"
        Title="Login do Sistema" 
        Width="350"
        SizeToContent="Height" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <StackPanel Margin="20">

        <TextBlock Text="Login" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Label Content="Usuário:" 
               FontSize="14"/>
        <TextBox x:Name="txtUsuario" 
                 FontSize="14" 
                 Padding="5"
                 Margin="0,0,0,10"/>

        <Label Content="Senha:" 
               FontSize="14"/>
        <PasswordBox x:Name="pwdSenha" 
                     FontSize="14" 
                     Padding="5"
                     Margin="0,0,0,20"/>

        <Button x:Name="btnAcessar" 
                Content="Acessar" 
                Click="BtnAcessar_Click"
                FontSize="16"
                FontWeight="Bold"
                Padding="10"
                Cursor="Hand"/>

    </StackPanel>
</Window>